SELECT first_name AS Имя,
last_name AS Фамилия FROM employee;

SELECT * FROM employee
WHERE age < 35 OR age > 50;

SELECT * FROM employee
WHERE age BETWEEN 35 AND 50;

SELECT * FROM employee
ORDER BY last_name DESC;

SELECT * FROM employee
WHERE last_name LIKE '____%';

UPDATE employee SET first_name = 'Ivan'
WHERE id = 3;

UPDATE employee SET first_name = 'Marina'
WHERE id = 4;

SELECT first_name AS Имя,
           SUM (age) AS Суммарное_количество_лет
FROM employee GROUP BY first_name;

SELECT first_name AS Имя,
           MIN (age) AS Самый_младший_возраст
FROM employee GROUP BY first_name;

SELECT first_name , MAX (age)
FROM employee
GROUP BY first_name
HAVING COUNT (first_name) >1;

CREATE TABLE city (
        city_id INT PRIMARY KEY,
        city_name VARCHAR(50) NOT NULL
);


ALTER TABLE employee ADD COLUMN city_id INT;

ALTER TABLE employee ADD FOREIGN KEY (city_id) REFERENCES city (city_id);

SELECT employee, city
FROM employee
JOIN city
ON employee.city_id = city.city_id;

INSERT INTO city
VALUES (832, 'Москва'),
       (1264, 'Санкт-Петербург'),
       (1283, 'Воронеж'),
       (1300, 'Саратов'),
       (1269, 'Ростов-на-Дону');

UPDATE employee SET city_id =1264 WHERE id=1;
UPDATE employee SET city_id =832 WHERE id=2;
UPDATE employee SET city_id =1264 WHERE id=3;
UPDATE employee SET city_id =1269 WHERE id=4;
UPDATE employee SET city_id =1300 WHERE id=5;

SELECT employee.first_name, employee.last_name, city.city_name
FROM employee
INNER JOIN city
ON employee.city_id = city.city_id;

SELECT city.city_name, employee.first_name, employee.last_name
FROM city
LEFT JOIN employee
ON employee.city_id = city.city_id;

SELECT city.city_name, employee.first_name, employee.last_name
FROM city
FULL OUTER JOIN employee
ON employee.city_id = city.city_id;

SELECT city.city_name, employee.first_name, employee.last_name
FROM city
CROSS JOIN employee;

SELECT city.city_name
FROM city
LEFT JOIN employee
ON employee.city_id = city.city_id
WHERE employee.city_id IS NULL;


